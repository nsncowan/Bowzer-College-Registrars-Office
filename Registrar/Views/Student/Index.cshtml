@{
  Layout = "_Layout";
}

@using Registrar.Models;

<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h3>No students have been added yet.</h3>
} 

<ul>
  @foreach(Student student in Model)
  {
    <li>@Html.ActionLink($"{student.Name}", "Details", new {id = student.StudentId}) | enrolled: @student.DateOE</li>
  }
</ul>

